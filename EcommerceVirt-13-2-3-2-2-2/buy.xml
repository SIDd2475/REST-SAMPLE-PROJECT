for (int i = 0; i &lt; fields.length; ++i){
    kv = fields[i].split("=");
    if (2 == kv.length)
     params.put(kv[0], kv[1]); 
}

if (!params.containsKey("buystring")) {
     return "Missing buystring parameter"
}
def buystring = URLDecoder.decode(params.get("buystring"), "UTF-8")

if (buystring == "all") 
 return "WildCard Response"
